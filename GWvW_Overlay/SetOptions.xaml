<Window x:Name="Options" x:Class="GWvW_Overlay.SetOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options" Height="278.261" Width="430.435">
    <Grid>
        <GroupBox Header="Transparency" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="60" Width="394">
            <Slider x:Name="opticity_slider" HorizontalAlignment="Left" Margin="10,10,-2,0" VerticalAlignment="Top" Width="374" Maximum="1" Minimum="0.4" Value="0.65" ValueChanged="opticity_slider_ValueChanged"/>
        </GroupBox>
        <GroupBox Header="Hotkey" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,75,0,0" Height="75" Width="394">
            <Canvas>
                <Label Content="Current" HorizontalAlignment="Left" Height="31" Margin="7,13,0,0" VerticalAlignment="Top" Width="104" />
                <Label Name="lblNewKey" Content=" " HorizontalAlignment="Left" Height="31" VerticalAlignment="Top" Width="104" Canvas.Left="268" Canvas.Top="13" />
                <TextBox x:Name="txtbox_hotkey" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="83" Canvas.Left="65" Canvas.Top="15" IsReadOnly="True"/>
                <Button x:Name="btnNewHotkey" Content="New Hotkey" Height="23" Canvas.Left="164" Canvas.Top="15" Width="96" Click="btnNewHotkey_Click"/>
            </Canvas>
            

        </GroupBox>
        <GroupBox Header="Other" HorizontalAlignment="Left" Margin="10,155,0,0" VerticalAlignment="Top" Height="77" Width="394">
            <Canvas>
            <CheckBox Content="Display objective names" HorizontalAlignment="Left" Height="16" VerticalAlignment="Top" Width="165" Margin="10,10,0,0" IsEnabled="False"/>
            <CheckBox x:Name="chkAlwaysTop" Content="Always on top" HorizontalAlignment="Left" Height="16" VerticalAlignment="Top" Width="165" Canvas.Left="10" Canvas.Top="29" Checked="chkAlwaysTop_Checked" Unchecked="chkAlwaysTop_Unchecked"/>
                </Canvas>
        </GroupBox>
        

    </Grid>
</Window>
